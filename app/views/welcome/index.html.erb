<main>
  <div class="container">
    <div style="margin-bottom: 20px;">
      <a href="#" class="btn btn-default" style=" text-decoration: none;">В один кінець</a>
    </div>
    <form class="form-inline" action="/trains" method="post" style="margin-bottom: 20px;">
      <div class="form-group">
        <!--<input type="text" class="form-control" placeholder="Звідки" data-id="from-station" data-type="direction-input">-->
        <label for="from-list">Звідки:</label>
        <select class="form-control" name="departure" id="from-list">
          <% @stations.each do |s| %>
            <option value="<%= s.id_station %>"><%= s.route.city %>, <%= s.name_station %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <!--<input type="text" class="form-control" placeholder="Куди" data-id="from-station" data-type="direction-input">-->
        <label for="to-list">Куди:</label>
        <select class="form-control" name="arrival" id="to-list">
          <% @stations.each do |s| %>
              <option value="<%= s.id_station %>"><%= s.route.city %>, <%= s.name_station %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="datetimepicker2">Дата:</label>
        <input type="text" class='datepicker' name="date_start" id='datetimepicker2'>
        </input>
      </div>
      <button type="submit" class="btn btn-success" style="margin-bottom: 20px;">Знайти</button>
    </form>
  </div>
</main>
